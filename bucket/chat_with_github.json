  "installer": {
    "script": [
      "Write-Host 'Running silent GitHub Integration installer...' -ForegroundColor Cyan",
      "$process = Start-Process -FilePath \"$dir\\Chat_With_Github_Installer_1.0.1.exe\" -ArgumentList '/S', \"/D=$dir\\Chat_with_Github\" -PassThru -Wait"
    ]
  },
  "post_install": [
    "Write-Host 'Finalizing GitHub environment and KV Cache...' -ForegroundColor Green",
    "$destRoot = 'R:\\inference_phison'",
    "$destApp = Join-Path $destRoot 'chat_with_github_kvcache'",
    "$sourcePath = Join-Path $dir 'inference_phison'",
    "",
    "# 1. Ensure R-Drive structure exists",
    "if (!(Test-Path $destRoot)) { New-Item -ItemType Directory -Force -Path $destRoot | Out-Null }",
    "if (!(Test-Path $destApp)) { New-Item -ItemType Directory -Force -Path $destApp | Out-Null }",
    "",
    "# 2. Move contents if the source from ZIP exists",
    "if (Test-Path $sourcePath) {",
    "    Write-Host 'Moving KV Cache files from C: to R: drive...' -ForegroundColor Gray",
    "    Copy-Item -Path \"$sourcePath\\*\" -Destination $destApp -Recurse -Force",
    "    Remove-Item -Path $sourcePath -Recurse -Force",
    "    Write-Host 'KV Cache successfully moved to R drive.' -ForegroundColor Green",
    "} else {",
    "    Write-Host 'WARNING: Source inference_phison folder not found in C drive root.' -ForegroundColor Yellow",
    "}"
  ],
  "pre_uninstall": [
    "Write-Host 'Stopping GitHub and OpenWebUI services...' -ForegroundColor Red",
    "if (Test-Path \"$dir\\status.ps1\") { Remove-Item -Path \"$dir\\status.ps1\" -Force -ErrorAction SilentlyContinue }",
    "if (Test-Path \"$dir\\stop.ps1\") { & \"$dir\\stop.ps1\" | Out-Null; Start-Sleep -Seconds 2 }",
    "if (Test-Path \"$dir\\backend\\Uninstall.exe\") { Start-Process -Wait -FilePath \"$dir\\backend\\Uninstall.exe\" -ArgumentList '/S' }",
    "# Clean up R drive data",
    "if (Test-Path 'R:\\inference_phison\\chat_with_github_kvcache') { ",
    "    Write-Host 'Removing KV Cache from R drive...' -ForegroundColor Gray",
    "    Remove-Item -Path 'R:\\inference_phison\\chat_with_github_kvcache' -Recurse -Force -ErrorAction SilentlyContinue ",
    "}",
    "",
    "Remove-Item \"$dir\\Chat_With_Github_Installer_1.0.1.exe\" -Force -ErrorAction SilentlyContinue",
    "Get-ChildItem -Path $dir -Filter \"app*.log\" | Remove-Item -Force -ErrorAction SilentlyContinue",
    "if (Test-Path \"$dir\\backend\") { Remove-Item -Path \"$dir\\backend\" -Recurse -Force -ErrorAction SilentlyContinue }",
    "if (Test-Path \"$dir\\.env\") { Remove-Item \"$dir\\.env\" -Force -ErrorAction SilentlyContinue }"
  ]
}